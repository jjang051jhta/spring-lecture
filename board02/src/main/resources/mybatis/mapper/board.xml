<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jjang051.board02.dao.BoardDao">
    <insert id="writeBoard" parameterType="BoardDto">
        insert into board(id,title,content,writer,regdate,hit,password) values
        (board_seq.nextval,#{title},#{content},#{writer},sysdate,1,#{password})
    </insert>
    <select id="findAll" resultType="BoardDto" parameterType="PageDto">
        SELECT id,writer,title,content,regdate,hit, password
        FROM board
        ORDER BY regdate DESC
        OFFSET #{page} ROWS FETCH NEXT #{size} ROWS ONLY
    </select>
    <select id="findById" resultType="BoardDto" parameterType="int">
        select * from board where id = #{id}
    </select>
    <delete id="deleteBoard" parameterType="BoardDto">
        delete from board where id = #{id} and password = #{password}
    </delete>
    <select id="totalPage">
        SELECT count(*) AS total FROM board
    </select>
</mapper>